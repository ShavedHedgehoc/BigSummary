generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id      Int    @id @default(autoincrement())
  name    String
  barcode String @unique
  // Session Session[]
}

model Line {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Station Station[]
}

enum StationPosition {
  Press
  Lacque
  Caps
  Offset
}

model Station {
  id       Int             @id @default(autoincrement())
  position StationPosition
  Line     Line            @relation(fields: [line_id], references: [id])
  line_id  Int

  @@unique([position, line_id])
}

model Material {
  id   Int    @id @default(autoincrement())
  code String @unique
  name String
}

